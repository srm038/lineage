{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Genealogy",
  "description": "Contains individual family members",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "id": {
        "$ref": "#/definitions/nonEmptyString"
      },
      "first": {
        "$ref": "#/definitions/nonEmptyString"
      },
      "middle": {
        "$ref": "#/definitions/nonEmptyString"
      },
      "last": {
        "$ref": "#/definitions/nonEmptyString"
      },
      "shortname": {
        "$ref": "#/definitions/nonEmptyString"
      },
      "birth": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "date": {
            "$ref": "#/definitions/date"
          },
          "place": {
            "$ref": "#/definitions/nonEmptyString"
          }
        }
      },
      "death": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "date": {
            "$ref": "#/definitions/date"
          },
          "place": {
            "$ref": "#/definitions/nonEmptyString"
          }
        }
      },
      "marriage": {
        "type": "object",
        "patternProperties": {
          "[A-Za-z0-9]+": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "date": {
                "$ref": "#/definitions/date"
              },
              "place": {
                "$ref": "#/definitions/nonEmptyString"
              }
            }
          }
        }
      },
      "buried": {
        "type": "object",
        "required": [
          "cemetery"
        ],
        "additionalProperties": false,
        "properties": {
          "cemetery": {
            "$ref": "#/definitions/nonEmptyString"
          },
          "plusCode": {
            "$ref": "#/definitions/plusCode"
          },
          "date": {
            "$ref": "#/definitions/date"
          }
        }
      },
      "father": {
        "$ref": "#/definitions/nonEmptyString"
      },
      "mother": {
        "$ref": "#/definitions/nonEmptyString"
      },
      "children": {
        "oneOf": [
          {
            "type": "object",
            "patternProperties": {
              "[A-Za-z]+": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/nonEmptyString"
                },
                "uniqueItems": true
              }
            }
          },
          {
            "$ref": "#/definitions/nonEmptyString"
          }
        ]
      },
      "child": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/nonEmptyString"
        },
        "uniqueItems": true
      },
      "history": {
        "$ref": "#/definitions/nonEmptyString"
      },
      "tree": {
        "type": "boolean"
      },
      "gender": {
        "type": "string",
        "enum": [
          "M",
          "F",
          "m",
          "f"
        ]
      },
      "note": {
        "$ref": "#/definitions/nonEmptyString"
      },
      "sources": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/nonEmptyString"
        },
        "uniqueItems": true
      },
      "army": {
        "type": "boolean"
      },
      "kia": {
        "type": "boolean"
      },
      "pow": {
        "type": "boolean"
      },
      "mason": {
        "type": "boolean"
      },
      "crusade": {
        "type": "boolean"
      },
      "templar": {
        "type": "boolean"
      },
      "title": {
        "$ref": "#/definitions/nonEmptyString"
      },
      "antonym": {
        "$ref": "#/definitions/nonEmptyString"
      },
      "nickname": {
        "$ref": "#/definitions/nonEmptyString"
      },
      "lost": {
        "type": "boolean"
      }
    },
    "required": [
      "id",
      "first",
      "gender"
    ],
    "uniqueItems": true
  },
  "definitions": {
    "nonEmptyString": {
      "type": "string",
      "minLength": 1
    },
    "date": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "[A-Za-z]+( [0-9]{1,2})?, [0-9]{3,4}"
        },
        {
          "type": "number",
          "minimum": 800
        }
      ]
    },
    "plusCode": {
      "type": "string",
      "pattern": "[A-Z0-9]+?\\+[A-Z0-9]+?"
    }
  }
}